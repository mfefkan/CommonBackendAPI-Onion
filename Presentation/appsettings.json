{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "ConnectionStrings": {
    "WriteConnection": "Host=write-db-host;Port=5432;Database=YourDatabase;Username=YourUsername;Password=YourPassword",
    "ReadConnection": "Host=read-db-host;Port=5432;Database=YourDatabase;Username=YourUsername;Password=YourPassword"
  },

  "Jwt": {
    "Key": "YourSuperSecretKeyForJwt",
    "Issuer": "CommonBackendAPI",
    "Audience": "CommonBackendAPIUsers",
    "ExpireMinutes": 60
  }
}
